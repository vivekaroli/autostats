<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="management.data.vehicle.app.com.vehicledatamanagement.RegisterActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:textAlignment="textStart">


            <LinearLayout
                android:id="@+id/vehicletypelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="6dp">



                <Spinner
                    android:id="@+id/vehicletype_spinner"
                    android:layout_width="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="0.5"
                    android:layout_height="40dp" />
                <EditText
                    android:id="@+id/vehiclenum"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:hint="Vehicle No."
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehiclelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicletypelayout"
                android:padding="6dp">

                <EditText
                    android:id="@+id/rcname"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Name"
                    android:layout_weight="0.5"
                    />
                <EditText
                    android:id="@+id/phnenum"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/edittext"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/RCnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehiclelayout"

                android:padding="6dp">

                <EditText
                    android:id="@+id/addr1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/edittext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:hint="Address Line 1"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:layout_weight="0.5"
                    />
                <EditText
                    android:id="@+id/addr2"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext"
                    android:visibility="visible"
                    android:hint="Address Line 2"
                    android:layout_weight="0.5"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addr1layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RCnamelayout"

                android:padding="6dp">


                <EditText
                    android:id="@+id/distname"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext"
                    android:visibility="visible"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    />
                <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addr2layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addr1layout"

                android:padding="6dp">

                <TextView
                    android:id="@+id/countryname"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/edittext"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:layout_weight="0.5"
                    android:text="India"
                    android:textColor="@color/black"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/pinnum"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:maxLength="6"
                    android:layout_weight="0.5"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/distlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addr2layout"

                android:padding="6dp">

                <EditText
                    android:id="@+id/emailaddress"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:inputType="textEmailAddress"
                    android:layout_weight="1"
                    android:padding="10dp"                 android:textSize="18dp"

                    android:background="@drawable/edittext"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:maxLines="1"/>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/buttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distlayout"

                android:padding="6dp">



                <Button
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/roundbutton"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:text="Reset" />

                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/roundbutton"
                    android:textColor="#fff"
                    android:layout_marginRight="20dp"

                    android:text="Register" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>
